<odoo>
    <record id="seq_hotel_reservation" model="ir.sequence">
        <field name="name">Hotel Reservation Sequence</field>
        <field name="code">hotel.reservation</field>
        <field name="prefix">BOOKING/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
    <record id="view_hotel_reservation_form" model="ir.ui.view">
        <field name="name">hotel.reservation.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Hotel Reservation">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="checkin,checkout,done"></field>
                    <button name="action_reserve" type="object" string="Reserve" class="oe_highlight"/>
                    <button name="action_checkin" type="object" string="Check In" class="oe_highlight"/>
                    <button name="action_checkout" type="object" string="Check Out" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_link btn-secondary"/>
                </header>
                <sheet>
                    <h1><field name="reservation_code" readonly="1"/></h1>
                    <group>
                        <group>
                            <field name="customer"/>
                            <field name="invoice_address"/>
                        </group>
                        <group>
                            <field name="reserve_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Folio">
                            <field name="room_ids">
                                    <tree editable="bottom" create="true" delete="true" edit="true">
                                        <field name="room_id"/>
                                        <field name="checkin"/>
                                        <field name="checkout"/>
                                        <field name="duration"/>
                                        <field name="uom_id"/>
                                        <field name="rent"/>
                                        <field name="subtotal"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="room_id"/>
                                            <field name="checkin"/>
                                            <field name="checkout"/>
                                            <field name="duration" readonly="1"/>
                                            <field name="uom_id"/>
                                            <field name="rent"/>
                                            <field name="subtotal" readonly="1"/>
                                        </group>
                                    </form>
                            </field>
                            <group>
                                <group></group>
                                <group>
                                    <field name="grand_total" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_reservation_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.tree</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <tree string="Hotel Reservation">
                <field name="reservation_code"/>
                <field name="customer"/>
                <field name="reserve_date"/>
                <field name="state"/>
                <field name="grand_total"/>
            </tree>
        </field>
    </record>
</odoo>