<odoo>
    <!-- record view floors form  -->

    <record id="view_hotel_floor_form" model="ir.ui.view">
        <field name="name">hotel.floor.form</field>
        <field name="model">hotel.floor</field>
        <field name="arch" type="xml">
            <form string="Floors">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- record view floors tree -->

    <record id="view_hotel_floor_tree" model="ir.ui.view">
        <field name="name">hotel.floor.tree</field>
        <field name="model">hotel.floor</field>
        <field name="arch" type="xml">
            <tree string="Floors">
                <field name="name"/>
                <field name="manager"/>
            </tree>
        </field>
    </record>

</odoo>